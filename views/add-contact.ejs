<%- include('layouts/header') %> 
<%- include('layouts/nav') %> 


<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
          <h2>form tambah data contact</h2>

          <!--mengecek ada error atau tidak -->
          <!--check kalau undifined berarti tidak ada error,kalau bukan undifined berarti ada error -->

          <% if (typeof errors != "undefined") { %>
             <!--buat alert dari bootstrap -->
             <div class="alert alert-danger" role="alert">
               <!--karena errors berupa arrya of object maka harus kita looping,akan diloop dlm bentuk list,li akan kita loop -->
              <ul><!--kalau ada 3 errornya maka akan tampi ketiganya dlm bentuk list,tapi kalau ga ada akan kosong -->
                <% errors.forEach(error => { %>
                  <li><%= error.msg %> </li> <!--'%='  seperti console log untuk mencetak -->
                <% }) %>
               
              </ul>
            </div>

          <% } %>








          <form method="post" action="/contact">

            <div class="mt-4">
              <label for="nama" class="form-label">Nama</label>
              <input type="text" class="form-control" id="nama" name="nama" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
            
              <div class="mb-3">
                <label for="noHP" class="form-label">Nomor</label>HP</label>
                <input type="text" class="form-control" id="noHP" name="noHP" required>
              </div>

            <button type="submit" class="btn btn-primary">Add Data Contact</button>
          </form>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>  